@model UsersModel
<div class="modal-content">
    <div class="modal-header">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-3 text-center @(Model.IsLogin?"inactive-tab":"")" id="regBtn" style="cursor:pointer">
                <h4 class="modal-title">Registration</h4>
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-3 text-center @(Model.IsLogin?"":"inactive-tab") " id="loginBtn" style="cursor:pointer">
                <h4 class="modal-title">Login</h4>
            </div>
            <div class="col-md-2">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @id = "editForm" }))
    {
        <div class="modal-body pt-50">
            <div class="form-horizontal">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.Hidden("IsLogin", Model.IsLogin)
                <div class="form-group @(Model.IsLogin?"hidden":"")" id="FNameDiv">
                    <label for="Name" class="col-md-3 control-label">First Name</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => Model.FirstName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(s => s.FirstName)
                    </div>
                </div>
                <div class="form-group @(Model.IsLogin?"hidden":"")" id="LNameDiv">
                    <label for="Name" class="col-md-3 control-label">Last Name</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => Model.LastName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(s => s.LastName)
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-md-3 control-label">Email</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => Model.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(s => s.Email)
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-md-3 control-label">Password</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => Model.Password, new { @class = "form-control", @type = "password" })
                        @Html.ValidationMessageFor(s => s.Password)
                    </div>
                </div>
            </div>

        </div>
        <div class="modal-footer" style="text-align:center">
            <button type="submit" class="btn btn-default btn-login" id="logReg">@(Model.IsLogin ? "Login": "Registration")</button>
        </div>
    }
</div>